{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix hearthstone-battlegrounds-simulator-client",
    "start": "nodemon server.js",
    "client": "npm start --prefix hearthstone-battlegrounds-simulator-client",
    "dev": "concurrently \"cd hearthstone-battlegrounds-simulator-client && npm start\" \"nodemon server.js\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix hearthstone-battlegrounds-simulator-client && npm run build --prefix hearthstone-battlegrounds-simulator-client",
    "database-loader": "node databaseLoader.js",
    "test": "jest --testEnvironment=node --coverage --detectOpenHandles --no-cache --forceExit",
    "integration-tests": "jest --testPathPattern=test/integration/ --testEnvironment=node --coverage=false --detectOpenHandles --no-cache --forceExit",
    "unit-tests": "jest --testPathPattern=test/unit/ --testEnvironment=node --coverage=false --detectOpenHandles --no-cache --forceExit",
    "lint": "eslint --ignore-path .gitignore ."
  },
  "author": "Ben Freudman",
  "license": "ISC",
  "dependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "helmet": "^4.1.1",
    "mongoose": "^5.9.25",
    "morgan": "^1.10.0",
    "nock": "^13.0.5",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.0",
    "supertest": "^6.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["*.js", "routes/*.js", "service/*.js", "model/*.js"],
    "testPathIgnorePatterns" : [
        "hearthstone-battlegrounds-simulator-client/" 
      ]
  }
}
